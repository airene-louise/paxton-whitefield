<div class="contact-main">
  <div class="contact-main__container">
    <div class="contact-main__heading">
      {% if section.settings.subtitle != blank %}
        <span class="contact-main__subtitle">{{ section.settings.subtitle }}</span>
      {% endif %}
      {% if section.settings.title != blank %}
        <h1 class="contact-main__title">{{ section.settings.title }}</h1>
      {% endif %}
      {% if section.settings.intro_text != blank %}
        {{ section.settings.intro_text }}
      {% endif %}
    </div>

    <div class="contact-main__inner {%if section.settings.hide_details == true %}contact-main__inner--center{%endif%}">  
      <div class="contact-main__details {%if section.settings.hide_details == true %}contact-main__details--hidden{%endif%}">
        <div class="contact-main__details-item">
          <div class="contact-main__details-item__header">
            {% render: 'icons', icon: 'envelope' %}
            <h5 class="contact-main__details-title">{{ section.settings.section_one_title }}</h5>
          </div>
          <div class="contact-main__details-text">
            {{ section.settings.section_one_text }}
          </div>
        </div>

        <div class="contact-main__details-item">
          <div class="contact-main__details-item__header">
            {% render: 'icons', icon: 'phone-icon' %}
            <h5 class="contact-main__details-title">{{ section.settings.section_two_title }}</h5>
          </div>
          <div class="contact-main__details-text">
            {{ section.settings.section_two_text }}
          </div>
        </div>

        <div class="contact-main__details-item">
          <div class="contact-main__details-item__header">
            {% render: 'icons', icon: 'pointer' %}
            <h5 class="contact-main__details-title">{{ section.settings.section_three_title }}</h5>
          </div>
          <div class="contact-main__details-text">
            {{ section.settings.section_three_text }}
          </div>
        </div>

        <div class="contact-main__details-item">
          <div class="contact-main__details-item__header">
            {% render: 'icons', icon: 'wholesale' %}
            <h5 class="contact-main__details-title">{{ section.settings.section_four_title }}</h5>
          </div>
          <div class="contact-main__details-text">
            {{ section.settings.section_four_text }}
          </div>
        </div>

      </div>

      <div class="contact-main__form">
        {% render 'contact-form', success_message: section.settings.success_message %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "intro_text",
      "label": "Intro text"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Form success message"
    },
    {
      "type": "text",
      "id": "section_one_title",
      "label": "Section one title",
      "default": "Write to us"
    },
    {
      "type": "richtext",
      "id": "section_one_text",
      "label": "Section one text",
      "default": "<p>Your address goes here.</p>"
    },
    {
      "type": "text",
      "id": "section_two_title",
      "label": "Section two title",
      "default": "Call us"
    },
    {
      "type": "richtext",
      "id": "section_two_text",
      "label": "Section two text",
      "default": "<p>Your phone number and times goes here</p>"
    },
    {
      "type": "text",
      "id": "section_three_title",
      "label": "Section three title",
      "default": "Visit us"
    },
    {
      "type": "richtext",
      "id": "section_three_text",
      "label": "Section three text",
      "default": "<p>Your blurb and link to stores goes here</p>"
    },
    {
      "type": "text",
      "id": "section_four_title",
      "label": "Section four title",
      "default": "Work with us"
    },
    {
      "type": "richtext",
      "id": "section_four_text",
      "label": "Section four text",
      "default": "<p>Your work number and email goes here</p>"
    },
    {
      "type": "checkbox",
      "id": "hide_details",
      "label": "Hide details",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}