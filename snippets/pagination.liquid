{% if template.name == 'blog' %}
  <div class="articles-shown">
    <p>
      Articles 
      {% assign start_article = paginate.current_offset | plus: 1 %}
      {% assign end_article = start_article | plus: paginate.page_size | minus: 1 | min: paginate.items %}
      {{ start_article }}-{{ end_article }} of {{ paginate.items }}
    </p>
  </div>
{% endif %}
{%- if paginate.pages > 1 -%}
  <nav class="pagination" role="navigation">
    <ol class="pagination__list">
      {%- if paginate.previous -%}
        <li class="pagination__item pagination__item--arrow">
          <a href="{{ paginate.previous.url }}" class="pagination__link">
            {% render "icons", icon: "arrow-left-black" %}
          </a>
        </li>
      {%- else -%}
        <li class="pagination__item pagination__item--arrow disabled">
          {% render "icons", icon: "arrow-left-black" %}
        </li>
      {%- endif -%}
      {%- for part in paginate.parts -%}
        {%- if part.is_link -%}
          <li class="pagination__item">
            <a href="{{ part.url }}" class="pagination__link">
              {{ part.title }}
            </a>
          </li>
        {%- else -%}
          {%- if part.title == paginate.current_page -%}
            <li class="pagination__item active" aria-current="page">
              {{ part.title }}
            </li>
          {%- else -%}
            <li class="pagination__item">
            {{ part.title }}
            </li>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}

      {%- if paginate.next -%}
        <li class="pagination__item pagination__item--arrow">
          <a href="{{ paginate.next.url }}" class="pagination__link">
            {% render "icons", icon: "arrow-right-black" %}
          </a>
        </li>
      {%- else -%}
        <li class="pagination__item pagination__item--arrow disabled">
          {% render "icons", icon: "arrow-right-black" %}
        </li>
      {%- endif -%}
    </ol>
  </nav>
{% endif %}